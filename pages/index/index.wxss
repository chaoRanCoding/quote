
.title{
  height: 100rpx;
  background-color: #3DCAE6;
  color: #fff;
  box-sizing: border-box;
  position: fixed;
  z-index: 20;
  left: 0;
  top: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon{
  height: 40rpx;
  width: 40rpx;
}

.activePower{
  color: #ccc;
  border-radius: 6rpx;
  font-size: 28rpx;
  padding-left: 10rpx;
}

.empty{
  flex: 1;
  text-align: center;
  box-sizing: border-box;
  height: 150rpx;
  display: flex;
  justify-content:flex-end;
  align-items: center;
}
.pl{
    padding-left: 20rpx;
}

.pr{
    padding-right: 15rpx;
}
.showCheck{
  font-size: 30rpx;
}

.img{
  display: block;
  height: 150rpx;
  width: 150rpx;

}

.img image{
  height: 100%;
  width: 100%;
}
.name{
  padding-left: 10rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  flex: 4;
}

.priceBox{
  flex:1;
  display: flex;
  padding-left: 10rpx;
  box-sizing: border-box;
  padding-top: 10rpx;
}
.price{
  color: red;
  font-size: 32rpx;
  flex:1;
  
}
.maketPrice{
  font-size: 28rpx;
  flex: 1;
  text-decoration:line-through;
  margin-top: 4rpx;
  color:#ccc;
}

.productRight{
  flex:8;
  display: flex;
  flex-direction: column;
}

.item{
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 1px;
  background-color: #fff;
}
.productList{
  height: 100%;
}

.pb{
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  color: #ccc;
  line-height: 100rpx;
  background-color: #FFF;
}

.basket{
  height: 100rpx;
  box-sizing: border-box;
  position: fixed;
  z-index: 20;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.addAll{
  flex:1;
  font-size: 30rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.addBtn{
  background-color: #3DCAE6;
  height: 100rpx;
  text-align: center;
  color:#fff;
  font-size: 30rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
}
